{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "moduleDetection": "force",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "baseUrl": "."
  },
  "include": [
    "src/**/*",
    "analytics/**/*.js",
    "src/types/**/*.d.ts",
    "src/python/**/*.ts"
  ]
}